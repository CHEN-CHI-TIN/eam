{
  // For quick reference: https://containers.dev/implementors/json_reference/
  "name": "Python Docker",
  "image": "python:3.12-bookworm",
  "remoteUser": "t",
  "workspaceFolder": "/workspaces/python-dind/",
  "postAttachCommand": "cat /workspaces/python-dind/dev-tools/runtime.sh > ~/.bashrc && docker compose -f /workspaces/python-dind/compose.yml up --build -d",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/python:1": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker": {},
    "ghcr.io/devcontainers/features/node:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        // ui
        "workbench.colorTheme": "Tokyo Night Storm",
        "workbench.iconTheme": "material-icon-theme",
        "workbench.startupEditor": "readme",
        "explorer.confirmDelete": false,
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.wordWrap": "on",
        "files.exclude": {
          "**/.DS_Store": false,
          "**/.git": false,
          "**/.hg": false,
          "**/.svn": false,
          "**/CVS": false,
          "**/Thumbs.db": false
        },
        // font
        "editor.fontFamily": "FiraCode Nerd Font Mono",
        "editor.fontWeight": "350",
        "editor.fontSize": 14,
        "editor.fontLigatures": true
      },
      "extensions": [
        "ms-python.python",
        "ms-python.debugpy",
        "ms-python.vscode-pylance",
        "ms-python.isort",
        "ms-toolsai.jupyter",
        "ms-toolsai.jup-keymap",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.vscode-jupyter-slideshow",
        "ms-toolsai.tensorboard",
        "charliermarsh.ruff",
        "ms-python.black-formatter",
        "ms-python.vscode-pylance",
        "enkia.tokyo-night"
      ]
    }
  }
}
